@model IEnumerable<MyStore.Models.Category>

@{
    ViewData["Title"] = "Category List";
}

<h1>Category List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add New Category</a>
</p>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-bordered mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>Category ID</th> 
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryId</td>
                        <td>@item.CategoryName</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary btn-sm">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No Category</p>
}














